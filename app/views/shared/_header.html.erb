<header class='page-header'>
  <h1 class='header-left'>TRIP</h1>
  <ul class='header-right'>
    <%# if user_signed_in? %>
      <li class='header-li'><%= link_to 'nickname', root_path, class: "user-nickname" %></li>
      <li class='header-li'><%= link_to 'ログアウト', '#', method: :delete, class: "logout" %></li>
